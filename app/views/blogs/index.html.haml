.container.blogs
  .row
    .col-md-10.col-md-offset-1.title
      %h1 Blog posts

  .row
    .col-md-6.col-md-offset-1.text
      .event
        %h3= link_to @most_recent_blog.title, blog_path(@most_recent_blog)
        %p.date= @most_recent_blog.created_at.strftime('%d-%m-%Y')
        %div= markdown(@most_recent_blog.content)

    .col-md-4.block
      %h4 Newsletter
      %p= link_to 'Subscribe to our newsletter', 'http://devnology.us4.list-manage1.com/subscribe?u=6bd0ddede117436baeda27903&id=6116b82b57'
      %p= link_to 'Newsletter archive', 'http://us4.campaign-archive1.com/home/?u=6bd0ddede117436baeda27903&id=6116b82b57'
      %h4 News @devnologynl
      - if @recent_tweets
        - @recent_tweets.each do |tweet|
          .update
            %p= tweet.text
            %p.date= tweet.date.strftime('%d-%m-%Y at %H:%M')
      - else
        %p Twitter feed is currently not available

  .row
    .col-md-10.col-md-offset-1
      %h2 Archive
      - @old_blogs.each do |blog|
        %h4= link_to blog.title, blog_path(blog)
