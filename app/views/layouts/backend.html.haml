!!!
%html
  %head
    %title Devnology back-end
    = stylesheet_link_tag    "backend", media: "all"
    = javascript_include_tag "backend"
    = csrf_meta_tags

  %body
    .container
      .row
        .col-md-8.col-md-offset-2
          .header
            - if admin_signed_in?
              %ul.nav.nav-pills.pull-right
                = menu_item(backend_events_path, 'Events')
                = menu_item(backend_blogs_path, 'Blogs')
            %h3.text-muted Devnology back-end
          .row
            .col-md-12
              = yield
